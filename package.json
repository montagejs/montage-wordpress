{
    "name": "wordpress-blog-flow",
    "version": "0.1.0",
    "license": "BSD-3-Clause",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/montagestudio/montage-wordpress.git"
    },
    "bugs": {
        "url": "https://github.com/montagestudio/montage-wordpress/issues"
    },
    "homepage": "https://github.com/montagestudio/montage-wordpress#readme",
    "scripts": {
        "lint": "jshint .",
        "build": "mop .",
        "publish": "git checkout gh-pages && git subtree push --prefix dist origin gh-pages",
        "start": "npm run start:app",
        "start:app": "minit serve",
        "start:dist": "minit serve -r dist"
    },
    "dependencies": {
        "digit": "^3.0.2",
        "montage": "montagejs/montage#master",
        "montage-wordpress": "montagestudio/montage-wordpress#master"
    },
    "devDependencies": {
        "jshint": "^2.9.5",
        "minit": "^0.5.7",
        "montage-testing": "~0.5.1",
        "mop": "montagejs/mop#master"
    },
    "excludes": [
        "**/**/mocha.css",
        "dist",
        "builds"
    ],
    "bundle": [
        "ui/main.reel"
    ]
}